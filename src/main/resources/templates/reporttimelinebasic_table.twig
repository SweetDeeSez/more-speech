<table class="tweettable">
	{% if ( sourcetweet ) %}
	<tr class="tweetrow">
		<td colspan="4">{{ sourcetweet }}</td>
	</tr>
	{% endif %}

	<tr class="infoheader">
		<th>Status</th>
		<th>Number of replies</th>
		<th>Percent suppressed replies</th>
		<th>Percent hidden replies</th>
	</tr>

	<tr class="inforow">
		{{ status }}
		<td>{{ num_replies }}</td>
		<td>{{ percent_suppressed }}%</td>
		<td>{{ percent_hidden }}%</td>
	</tr>

	<tr class="sectionheader">
		<th colspan="4">
			Anomalous elevated tweets:
		</th>
	</tr>

	<tr class="tweetlistrow">
		<td colspan="4">
			<ul>
				{% for item in anomalous_elevated_tweets %}
				<li>
					{{ item }}
				</li>
				{% endfor %}
			</ul>
		</td>
	</tr>

	<tr class="sectionheader">
		<th colspan="4">
			Anomalous suppressed/hidden tweets:
		</th>
	</tr>

	<tr class="tweetlistrow">
		<td colspan="4">
			<ul>
				{% for item in anomalous_suppressed_tweets %}
				<li>
					{{ item }}
				</li>
				{% endfor %}
			</ul>
		</td>
	</tr>

	<tr class="sectionheader">
		<th colspan="4">
			Other hidden tweets:
		</th>
	</tr>

	<tr class="tweetlistrow">
		<td colspan="4">
			<ul>
				{% for item in hidden_tweets %}
				<li>
					{{ item }}
				</li>
				{% endfor %}
			</ul>
		</td>
	</tr>


	{% if ( debugData != null ) %}
	<tr class="debugrow">
		<td colspan="4"><a class="hideshow" data-name-hide="hide" data-name-show="show" href="#">show</a> <pre class="debugdata hideshowcontent">{{ debugData }}</pre></td>
	</tr>
	{% endif %}
</table>
